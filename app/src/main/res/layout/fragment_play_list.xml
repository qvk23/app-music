<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.PlayListFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<ListView-->
            <!--android:id="@+id/listSong"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="400dp">-->

    <!--</ListView>-->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listSong"
            android:layout_width="match_parent"
            android:layout_height="400dp">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/controls"
            android:layout_alignParentBottom="true">
        <ImageButton
                android:layout_below="@+id/tv_song_duration"
                android:src="@drawable/skip_previous"
                android:minHeight="40dp"
                android:id="@+id/play_prev"
                android:layout_toLeftOf="@+id/button_play"
                android:maxHeight="40dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageButton
                android:layout_below="@+id/tv_song_duration"
                android:id="@+id/button_play"
                android:minHeight="40dp"
                android:maxHeight="40dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageButton
                android:layout_below="@+id/tv_song_duration"
                android:layout_toEndOf="@+id/button_play"
                android:minHeight="40dp"
                android:maxHeight="40dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:id="@+id/play_next"
                android:src="@drawable/skip_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <SeekBar
                android:layout_below="@+id/textviewSongTitle"
                android:id="@+id/seek_bar_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_song_duration"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/seek_bar_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/textviewSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>